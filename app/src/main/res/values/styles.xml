<resources>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.AppCompat.NoActionBar.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Theme.AppCompat.NoActionBar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="Preference.Theme.Category" parent="Preference.Category">
        <item name="android:background">@color/white</item>
        <item name="android:colorAccent">@color/maps_2</item>
        <item name="android:textColor">@color/maps_4</item>
    </style>

    <style name="SalesSpinner" parent="">
        <item name="android:textColor">@color/maps_fink</item>
        <item name="android:background">@color/maps_1</item>
    </style>

    <style name="PreferenceList">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/maps_1</item>
    </style>


    <style name="PreferenceSwitch">
        <item name="android:colorAccent">@color/maps_2</item>
        <item name="android:textColor">@color/maps_1</item>

    </style>

    <style name="Widget.Theme.Mpas.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Mpas.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>