<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mpas" parent="mpas_actionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/maps_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/maps_1</item>
        <item name="android:background">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maps_1</item>
        <item name="colorSecondaryVariant">@color/maps_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.mpas.cardView.spinner" parent="">
        <item name="android:background">@color/maps_4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyApplication.Main" parent="">
        <item name="fullscreenBackgroundColor">@color/maps_1</item>
        <item name="fullscreenTextColor">@color/maps_2</item>
    </style>
 <!--
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
        -->

    <style name="MyApplication.payment" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mpas_actionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyApplication.Main.Button">
        <item name="android:textColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AppCompat.NoActionBar.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Mvp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>