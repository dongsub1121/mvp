<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maps_2</item>
        <item name="colorSecondaryVariant">@color/maps_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyApplication.Main" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="MyApplication.payment" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="ThemeOverlay.Mvp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="Custom.Light" parent="Theme.Material3.Light">

        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/maps_1</item>
        <item name="colorPrimaryDark">@color/maps_2</item>
        <item name="colorSecondary">@color/maps_3</item>
        <item name="android:colorBackground">@color/maps_fink</item>
        <item name="colorError">@color/maps_accent</item>

        <!-- MaterialComponents attributes (needed if parent="Theme.AppCompat"). -->
        <item name="colorPrimaryVariant">@color/light_blue_A200</item>
        <item name="colorSecondaryVariant">@color/maps_5</item>
        <item name="colorSurface">@color/light_blue_A200</item>
        <item name="colorOnPrimary">@color/maps_icon</item>
        <item name="colorOnSecondary">@color/light_blue_A200</item>
        <item name="colorOnBackground">@color/maps_0</item>
        <item name="colorOnError">@color/maps_red</item>
        <item name="colorOnSurface">@color/maps_gray</item>
        <item name="scrimBackground">@color/maps_accent</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

        <!-- Material3 attributes (needed if parent="Theme.MaterialComponents"). -->
        <item name="colorPrimaryInverse">@color/maps_1</item>
        <item name="colorPrimaryContainer">@color/maps_0</item>
        <item name="colorOnPrimaryContainer">@color/maps_2</item>
        <item name="colorSecondaryContainer">@color/maps_3</item>
        <item name="colorOnSecondaryContainer">@color/maps_4</item>
        <item name="colorTertiary">@color/light_blue_A200</item>
        <item name="colorOnTertiary">@color/light_blue_600</item>
        <item name="colorTertiaryContainer">@color/light_blue_900</item>
        <item name="colorOnTertiaryContainer">@color/maps_fink</item>
        <item name="colorSurfaceVariant">@color/maps_icon</item>
        <item name="colorOnSurfaceVariant">@color/light_blue_A400</item>
        <item name="colorSurfaceInverse">@color/light_blue_600</item>
        <item name="colorOnSurfaceInverse">@color/light_blue_900</item>
        <item name="colorOutline">@color/maps_1</item>
        <item name="colorErrorContainer">@color/maps_accent</item>
        <item name="colorOnErrorContainer">@color/maps_fink</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Material3.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Material3.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.Material3.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Material3.HeadlineLarge</item>
