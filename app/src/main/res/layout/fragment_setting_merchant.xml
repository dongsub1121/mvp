<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/SettingsCategory">

        <androidx.cardview.widget.CardView
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/maps_2"
                android:padding="20dp"
                android:textColor="@color/maps_fink"
                android:text="가맹점 등록"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/guideText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/maps_2"
            android:text="가맹점 정보를 입력해 주세요"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/screen_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/maps_accent"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideText" />

        <RelativeLayout
            android:id="@+id/infoSetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/notificationMessage"
            android:layout_margin="50dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/businessId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="사업자 번호를 입력해 주세요"
                android:textSize="20sp"
                android:textColorHint="@color/maps_accent"
                android:outlineAmbientShadowColor="@color/purple_700"
                android:outlineSpotShadowColor="@color/purple_700"
                app:counterMaxLength="10">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Number"
                    android:inputType="number"
                    android:longClickable="false"
                    android:defaultFocusHighlightEnabled="true"
                    android:text="2970701029"
                    android:textSize="20sp"
                    android:textColor="@color/maps_1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/merchantId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/businessId"
                android:layout_marginTop="20dp"
                app:counterMaxLength="10"
                android:hint="NICE PAYMENTS ID를 입력해 주세요"
                android:textColorHint="@color/maps_accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/merchantIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NICE PAYMENTS ID"
                    android:longClickable="false"
                    android:inputType="number"
                    android:text="1814119625"
                    android:textSize="20sp"
                    android:textColor="@color/maps_1" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/merchantId"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/downButton"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/maps_2"
                    android:textColor="@color/maps_accent"
                    android:textSize="15sp"
                    android:text="가맹점 추가"
                    android:gravity="center_vertical|center_horizontal" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoSetLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>