<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="model"
                type="com.mpas.mvp.merchant1.view.MerchantViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/MyApplication.payment"
            tools:context=".merchant1.view.MerchantFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/businessId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="#000063"
                android:layout_margin="20dp"
                app:counterMaxLength="10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/downButton"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Number"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:text="2970701029" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/merchantId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="#000063"
                app:layout_constraintTop_toBottomOf="@+id/businessId"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/downButton"
                android:layout_margin="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/merchantIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Merchant Number"
                    android:inputType="number"
                    android:text="1814119625" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/downButton"
                android:layout_width="0dp"
                android:layout_height="131dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Get"
                android:textSize="30dp"
                android:textColorHighlight="@color/purple_700"

                style="?android:attr/buttonBarButtonStyle"
                app:layout_constraintBottom_toBottomOf="@+id/merchantId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/merchantId"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/merchant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/merchant_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/merchant_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/banksRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/info_layout"
                android:layout_margin="20dp"
                android:paddingBottom="300dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>