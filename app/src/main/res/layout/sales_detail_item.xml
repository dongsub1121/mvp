<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:padding="20dp"
    card_view:cardCornerRadius="5dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/sales_detail_ci"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@drawable/mpas_symbol02"
            app:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sales_detail_bank"
            style="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/sales_detail_ci"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sales_detail_count"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/sales_detail_amount"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/sales_detail_amount"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/nextButton"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"
            app:ignore="RelativeOverlap,RtlHardcoded" />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
