<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.CpmFragment">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/bt_credit"
                android:theme="@style/MyApplication.Main.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"

                android:text="Kakao Credit"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/bt_money"
                android:theme="@style/MyApplication.Main.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"

                android:text="Kakao Money"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bcd_generate"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullscreen_content_controls"
            tools:srcCompat="@tools:sample/avatars"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_qr_generate"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_bcd_generate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>